<div class="col">
    <div class="card mb-4 mb-xl-0 col-12">
        <div class="card-header">Photo de profil</div>
        <div class="card-body text-center">
{#            <input type="file" class="form-control-file" id="image" name="image">#}
            <!-- Profile picture image-->
            <img class="img-account-profile rounded-circle mb-2" id="image" width="249" height="218" src="{{ projet.image }}" alt="">
            <!-- Profile picture help block-->
            <div class="small font-italic text-muted mb-4">JPG ou PNG ne d√©passant pas 5 Mo</div>
            <!-- Profile picture upload input file hidden and nice button -->
            <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm">
                <input id="upload" type="file" hidden="hidden" name="image" onchange="readURL(this);" class="form-control border-0">
                <div class="input-group-append">
                    <label for="upload" class="btn btn-primary btn-block m-0 rounded-pill px-4"> <i class="fa fa-cloud-upload mr-2 text-muted"></i><small class="text-uppercase font-weight-bold text-muted">Choisir une photo</small></label>
                </div>

        </div>
    </div>

</div>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                $('#image').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }

        $("#upload").change(function() {
            readURL(this);
        });

    </script>